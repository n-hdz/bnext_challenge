<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= title %></title>
	  <!-- Bootstrap -->
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- Front-End Error Notification and Handling -->
    <%- include('partials/errModal') %>
	  <!-- Nav -->
    <%- include('partials/nav') %>
    <!-- Title -->
      <div class='container-fluid spinner d-flex justify-content-center align-items-center'>
        <div id="loader"></div>
      </div>      
      <div class="container-fluid content title">
      <div class="row">
        <div class="col-1 col-md-3"></div>
        <div class="col-10 col-md-6">
          <div class="container text-center">
            <img src="/images/account_circle-24px.svg" id="userIcon"></img>
            <p class="text-muted">Acceso a usuarios</p>
          </div>
        </div>
        <div class="col-1 col-md-3"></div>
      </div>
    </div>
    <!-- Form -->
    <div class="container-fluid content">
        <div class="row">
            <div class="col-1 col-md-3"></div>
            <div class="col-10 col-md-6">
                <div class="container">
                  <!-- User lookup form -->
                    <form method="POST" action="/user">
                        <div class="form-group">
                            <label for="idUsuario">NÃºmero de Usuario</label>
                            <%if (valid == false) { %>
                              <input type="text" class="form-control is-invalid" id="idUsuario" name="idUsuario" aria-describedby="idUsuarioHelp" placeholder="#" onkeyup="enableButton()"/>
                            <% } else { %>
                              <input type="text" class="form-control" id="idUsuario" name="idUsuario" aria-describedby="idUsuarioHelp" placeholder="#" onkeyup="enableButton()"/>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="Submit" class="btn btn-block" onclick="triggerSpinner()" id="submitUser" disabled>Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-1 col-md-3"></div>
        </div>
    </div>
	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="/javascripts/interface.js"></script>
  </body>
</html>